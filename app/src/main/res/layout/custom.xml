<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/customname"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintLeft_toRightOf="@+id/customimage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textSize="15dp"
        android:layout_alignTop="@+id/customimage"
        android:layout_toRightOf="@+id/customimage"
        android:layout_toEndOf="@+id/customimage"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <ImageView
        android:id="@+id/customimage"
        android:layout_width="113dp"
        android:layout_height="108dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>